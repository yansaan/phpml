    "prefix": "phpfor",
    "body": [
      "<?php for( $${1:i} = ${2:0}; $${1:i} ${3|<,>,<=,>=|} ${4:1}; $${1:i}++) : ?>",
      "${5:// Put Code here}",
      "<?php endfor; ?>"
    ]
  },
  "Foreatch in HTML": {
    "prefix": "phpforeatch",
