      "<?php foreatch( $${1:array} as ${2:val}) : ?>",
      "${3:// Put Code here}",
      "<?php endforeatch; ?>"
    ]
  },
  "If in HTML": {
    "prefix": "phpif",
    "body": [
      "<?php if(${1:\\$someware}) : ?>",
